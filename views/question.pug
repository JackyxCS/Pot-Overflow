extends layout.pug

block content
    table(id= question.id)
        thead
            tr
                th Question
                th Additional Info
                th User
                th Posted On
        tbody
            .buttons
                button(id="questionUp") ðŸ”º #{questionUpvotes.length}
                button(id="questionDown") ðŸ”» #{questionDownvotes.length}
            tr
                td= question.question
                td= question.additional_info
                td= question.User.username
                td= question.createdAt
    table
        thead
            tr
                th Votes
                th Answer
                th By user
                th Posted On
        tbody(id="answers")
            each answer in answers
                    tr
                        td
                            div(class="buttons")
                                button(id= `upvote-${answer.id}` class="answerUpvoteButtons") ðŸ”º #{answer.Upvotes.length}
                                button(id= `downvote-${answer.id}` class="answerDownvoteButtons") ðŸ”» #{answer.Downvotes.length}
                        td= answer.answer
                        td= answer.User.username
                        td= answer.createdAt
    form.new-answer
        input(id="csrf" type="hidden" name="_csrf" value=csrfToken)
        label(for="answer") Your Answer:
        textarea(class='question' name='answer' required)
        button(id="post-answer") Post
    script(src="/javascripts/question.js")
